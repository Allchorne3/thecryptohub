<section class="section hero">
    <div class="hero-body">
        <div class="content">
            <div class="text-wrapper">
                <h1>Struggling to make sense</h1>
                <h1>of <span>cryptocurrency</span></h1>
                <h1>platforms?</h1>
            </div>

            <p>Discover the top Crypto platforms! Access unbiased reviews to find the best options and steer clear of potential risks. Start your journey here at The Crypto Hub!</p>
            
            <div class="buttons">
                <a href="#" class="button button-primary">Get started</a>
            </div>
        </div>
    </div>
</section>

<section class="section is-medium" id="section-best">
    <div class="container is-max-widescreen">
        <h2 class="title is-text-centered">Current <span>best</span> platform</h2>

        {% for best in collections.currentBest %}
        {% set best = best.data %}
        
        <div class="tiles{% if best.vipTiers %} has-tiers{% endif %}">
            <div class="tile-title glared">
                <div>
                    <h3>{{ best.title }}</h3>
                    <p>{{ best.description }}</p>
                </div>
            </div>

            {% if best.vipTiers %}
            <div class="tile-vip-tiers glared">
                <h3>VIP</h3>

                <ul role="list">
                    {% for vipTier in best.vipTiers %}
                    <li>
                        <p><span>Tier {{ vipTier.tier }}:</span> {{ vipTier.balance }}{% if vipTier.note %} <br /> <em>({{ vipTier.note }})</em>{% endif %}</p>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            <div class="tile-info-small glared">
                <h3>Team Commissions and Referral Rewards:</h3>
                <p>{{ best.teamRewards }}</p>
            </div>

            <div class="tile-key-features glared">
                <h3>Key Features</h3>

                <div class="key-features">
                    <ul role="list">
                        {% for keyFeature in best.keyFeatures %}
                        <li>
                            <h5>{{ keyFeature.header }}</h5>
                            <p>{{ keyFeature.feature }}</p>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <da href="{{ best.referralLink }}" target="_blank" rel="noopener" class="tile-register glared">Click here to sign up now</da>

            <div class="tile-links glared">
                <h3>Resources</h3>

                <ul role="list">
                    {% for link in best.links %}
                    <li>
                        <a href="{{ link.link }}" target="_blank" rel="noopener" class="link-link">
                            {% if link.brand %}
                            <i class="fa-brands fa-{{ link.brand | kebab}}"></i>
                            {% elif link.website %}
                            <i class="fa-solid fa-globe"></i>
                            {% elif link.resource %}
                            <i class="fa-solid fa-file-lines"></i>
                            {% endif %}

                            {% if link.shortLink %}
                            <p>/{{ link.shortLink }}</p>
                            {% elif link.resource %}
                            <p>{{ link.title }}</p>
                            {% else %}
                            <p>{{ link.link }}</p>
                            {% endif %}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<a id="champs" class="is-page-anchor"></a>
<section class="section is-medium" id="section-mvp">
    <div class="container is-max-widescreen">
        <div class="section-header">
            <p class="pre-title">Champs</p>
            <h2 class="title">MVP April 2024</h2>
        </div>

        <div class="swiper mvp-swiper">
            <div class="swiper-wrapper">
                {% for champ in collections.champs %}
                <div class="swiper-slide">
                    <div class="mvp">
                        <div class="card platform-good">
                            <div class="card-information">
                                <span>{{ champ.data.order }}</span>
                                <h3 class="title">{{ champ.data.title }}</h3>
                                <p><strong>Launched:</strong> {{ champ.data.launchDate | prettyDate('MMM DD, YYYY') }}</p>
                                <p><strong>{{ champ.data.platformType}}</strong></p>

                                <div class="buttons">
                                    <a href="{{ champ.data.referralLink }}" target="_blank" rel="noopener" class="button button-primary">Sign Up now</a>
                                    <a href="#section-compare" class="text-link">Click here to view more details</a>
                                </div>
                            </div>
                            <div class="card-image">
                                <figure class="image">
                                    <img src="/assets/images/logos/{{ champ.data.title | kebab }}.png" alt="{{ champ.data.title }}">
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% include "swiper-pagination.njk" %}
        </div>
    </div>
</section>

<a id="avoid" class="is-page-anchor"></a>
<section class="section is-medium" id="section-avoid">
    <div class="container is-max-htablet">
        <div class="section-header">
            <p class="pre-title">Avoid</p>
            <h2 class="title special-text">Who should I avoid?</h2>
        </div>

        <div class="swiper avoid-swiper">
            <div class="swiper-wrapper">
                {% for avoid in collections.avoids %}
                <div class="swiper-slide">
                    <div class="card platform-bad">
                        <div class="card-information">
                            <h3 class="title">{{ avoid.data.title }}</h3>

                            <p class="card-information_description">{{ avoid.data.avoidDescription }}</p>
                        </div>
                        <div class="card-image">
                            <figure class="image">
                                <img src="/assets/images/logos/{{ avoid.data.title | kebab}}.png" alt="{{ avoid.data.title }}">
                            </figure>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% include "swiper-pagination.njk" %}
        </div>
    </div>
</section>

