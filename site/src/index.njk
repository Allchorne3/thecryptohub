---
layout: base.njk 
title: The Crypto Hub
---

<section class="section hero">
    <div class="hero-body">
        <div class="content">
            <div class="logo">
                <figure class="image">
                    <img src="./assets/images/logo/tch-logo.svg" alt="The Crypto Hub logo">
                </figure>
            </div>
            
            <h1><strong class="special-text">Struggling</strong> to make <span data-text="hacked">sense</span> of cryptocurrency platforms?</h1>
            <p>Discover the top Crypto platforms! Access unbiased reviews to find the best options and steer clear of potential risks. Start your journey here at The Crypto Hub!</p>
        </div>
    </div>
</section>

<a id="champs" class="is-page-anchor"></a>
<section class="section is-medium" id="section-mvp">
    <div class="container is-max-widescreen">
        <div class="section-header">
            <p class="pre-title">Champs</p>
            <h2 class="title">MVP April 2024</h2>
        </div>

        <div class="swiper mvp-swiper">
            <div class="swiper-wrapper">
                {% for champ in collections.champs %}
                <div class="swiper-slide">
                    <div class="mvp">
                        <div class="card platform-good">
                            <div class="card-information">
                                <span>{{ champ.data.order }}</span>
                                <h3 class="title">{{ champ.data.title }}</h3>
                                <p><strong>Launched:</strong> {{ champ.data.launchDate | prettyDate('MMM DD, YYYY') }}</p>
                                <p><strong>{{ champ.data.platformType}}</strong></p>

                                <div class="buttons">
                                    <a href="{{ champ.data.referralLink }}" target="_blank" rel="noopener" class="button button-primary">Sign Up now</a>
                                    <a href="#section-compare" class="text-link">Click here to view more details</a>
                                </div>
                            </div>
                            <div class="card-image">
                                <figure class="image">
                                    <img src="/assets/images/logos/{{ champ.data.title | kebab }}.png" alt="{{ champ.data.title }}">
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% include "swiper-pagination.njk" %}
        </div>
    </div>
</section>

<a id="avoid" class="is-page-anchor"></a>
<section class="section is-medium" id="section-avoid">
    <div class="container is-max-htablet">
        <div class="section-header">
            <p class="pre-title">Avoid</p>
            <h2 class="title special-text">Who should I avoid?</h2>
        </div>

        <div class="swiper avoid-swiper">
            <div class="swiper-wrapper">
                {% for avoid in collections.avoids %}
                <div class="swiper-slide">
                    <div class="card platform-bad">
                        <div class="card-information">
                            <h3 class="title">{{ avoid.data.title }}</h3>

                            <p class="card-information_description">{{ avoid.data.avoidDescription }}</p>
                        </div>
                        <div class="card-image">
                            <figure class="image">
                                <img src="/assets/images/logos/{{ avoid.data.title | kebab}}.png" alt="{{ avoid.data.title }}">
                            </figure>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% include "swiper-pagination.njk" %}
        </div>
    </div>
</section>

<div class="is-divider">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 1920.878 114.895" class="divider">
        <path
        element="path-to-animate"
        d="M4276,2726.413H6196.878v114.895s-952.163-50.252-1920.878,0C4276.319,2726.144,4276,2726.413,4276,2726.413Z"
        final-path="M4276,2726.413H6196.878v114.895s-959.106-153.2-1920.878,0C4276.319,2726.144,4276,2726.413,4276,2726.413Z" 
        transform="translate(-4276 -2726.413)" fill="#fcf9f5"/>
    </svg>
</div>

<a id="compare" class="is-page-anchor"></a>
<section class="section is-medium" id="section-compare">
    <div class="container is-max-htablet">
        <div class="section-header">
            <p class="pre-title">Compare</p>
            <h2 class="title">Tell me about these platforms?</h2>
        </div>

        <div class="tabby">
            <div class="tabs">
                <ul role="list">
                    {% for tab in collections.champs %}
                        <li>
                            <a href="#{{ tab.data.title | kebab }}" data-target="{{ tab.data.title | kebab }}"{% if tab.data.order === 1 %} class="is-selected"{% endif %}>{{ tab.data.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="tab-contents">
                {% for comparison in collections.champs %}
                <div class="tab-content{% if comparison.data.order === 1 %} is-selected{% endif %}" id="{{ comparison.data.title | kebab }}">
                    <div class="tiles{% if comparison.data.vipTiers %} has-tiers{% endif %}">
                        <div class="tile-title">
                            <header>
                                <figure class="image">
                                    <img src="./assets/images/logos/{{ comparison.data.title | kebab }}.png" alt="{{ comparison.data.title }}">
                                </figure>
                                <h3>{{ comparison.data.title }}</h3>
                            </header>
                            
                            <h4>{{ comparison.data.description }}</h4>

                            <div class="buttons">
                                <a href="{{ comparison.data.referralLink }}" target="_blank" rel="noopener" class="button button-big button-primary">Sign up now</a>
                            </div>
                        </div>

                        {% if comparison.data.vipTiers %}
                        <div class="tile-vip-tiers">
                            <h4>VIP Tiers</h4>
                            <p>{{ comparison.data.vipDescription }}</p>

                            <ol role="list">
                                {% for vipTier in comparison.data.vipTiers %}
                                <li>
                                    <p>
                                        <strong>VIP Tier {{ vipTier.tier }}:</strong> {{ vipTier.balance }}{% if vipTier.note %} <br /> <em>({{ vipTier.note }})</em>{% endif %}</p>
                                </li>
                                {% endfor %}
                            </ol>
                            
                            <div class="buttons mobile-only">
                                <a href="{{ comparison.data.referralLink }}" target="_blank" rel="noopener" class="button button-big button-primary">Sign up now</a>
                            </div>
                        </div>
                        {% endif %}

                        <div class="tile-info-small">
                            <h4>Team Commissions and Referral Rewards:</h4>
                            <p>{{ comparison.data.teamRewards }}</p>
                            
                            <div class="buttons mobile-only">
                                <a href="{{ comparison.data.referralLink }}" target="_blank" rel="noopener" class="button button-big button-primary">Sign up now</a>
                            </div>
                        </div>

                        <div class="tile-key-features">
                            <h4>Key Features</h4>

                            <div class="key-features">
                                <ol role="list">
                                    {% for keyFeature in comparison.data.keyFeatures %}
                                    <li>
                                        <h5>{{ keyFeature.header }}</h5>
                                        <p>{{ keyFeature.feature }}</p>
                                    </li>
                                    {% endfor %}
                                </ol>

                                <div class="buttons mobile-only">
                                    <a href="{{ comparison.data.referralLink }}" target="_blank" rel="noopener" class="button button-big button-primary">Sign up now</a>
                                </div>
                            </div>
                        </div>

                        <div class="tile-links">
                            <ul role="list">
                                {% for social in comparison.data.socials %}
                                <li>
                                    <h5>{{ social.title }}</h5>
                                    <a href="{{ social.link }}" target="_blank" rel="noopener" class="social-link">
                                        <i class="fa-brands fa-{{ social.brand | kebab}}"></i>
                                        <p>/{{ social.shortLink }}</p>
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>

                            {% if comparison.data.website %}
                            <h4>Official Website</h4>
                            <a href="{{ comparison.data.website }}">{{ comparison.data.website }}</a>
                            {% endif %}

                            {% if comparison.data.resources %}
                            <h4>Resources</h4>
                            <ul role="list">
                                {% for resource in comparison.data.resources %}
                                <li>
                                    {# <h5>{{ resource.icon }}</h5> #}
                                    <a href="{{ resource.link }}" target="_blank" rel="noopener" class="resource-link">
                                        <i class="{{ resource.icon }}"></i>
                                        {{ resource.name }}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<div class="is-divider">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 1920.878 114.895" class="divider">
        <path
        element="path-to-animate"
        d="M4276,2726.413H6196.878v114.895s-952.163-50.252-1920.878,0C4276.319,2726.144,4276,2726.413,4276,2726.413Z"
        final-path="M4276,2726.413H6196.878v114.895s-959.106-153.2-1920.878,0C4276.319,2726.144,4276,2726.413,4276,2726.413Z" 
        transform="translate(-4276 -2726.413)" fill="#fcf9f5"/>
    </svg>
</div>

<a id="trust" class="is-page-anchor"></a>
<section class="section is-medium" id="section-trust">
    <div class="container is-max-htablet">
        <div class="section-header">
            <p class="pre-title">Trust</p>
            <h2 class="title">Proof of withdrawals</h2>
        </div>

        <div class="swiper trust-swiper">
            <div class="swiper-wrapper">
                {% for proof in collections.champs %}
                    {% if proof.data.proof %}
                    <div class="swiper-slide">
                        <figure class="image proof">
                            <span class="platform">{{ proof.data.title }}</span>
                            <img src="/assets/images/proof/{{ proof.data.title | kebab }}.png" alt="{{ proof.data.title }} proof of withdrawal">
                        </figure>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
            
            {% include "swiper-pagination.njk" %}
        </div>
    </div>
</section>

